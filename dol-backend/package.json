{
	"name": "dol-backend",
	"version": "0.0.1",
	"description": "",
	"author": "Miroslav Braun <braun.miroslav@gmail.com>",
	"private": true,
	"license": "MIT",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"cli": "ts-node -r tsconfig-paths/register ./src/cli.ts",
		"fixtures:load": "fixtures -c ormconfig.js --require ts-node/register src/core/infrastructure/fixture/data-dev/",
		"fixtures:load:test": "fixtures -c ormconfig.js --require ts-node/register src/core/infrastructure/fixture/data-test/",
		"fixtures:load:prod": "fixtures -c ormconfig.js --require ts-node/register src/core/infrastructure/fixture/data-prod/",
		"fixtures:reset": "yarn run typeorm:db:reset && yarn run fixtures:load",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"test:e2e:prepare": "yarn run typeorm:db:reset && yarn run fixtures:load:test",
		"typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
		"typeorm:db:reset": "yarn run typeorm schema:drop && yarn run typeorm schema:sync",
		"heroku-postbuild": "yarn install --production=false"
	},
	"dependencies": {
		"@hapi/joi": "^17.1.1",
		"@nestjs/common": "^7.6.13",
		"@nestjs/config": "^0.6.3",
		"@nestjs/core": "^7.6.13",
		"@nestjs/jwt": "^7.2.0",
		"@nestjs/passport": "^7.1.5",
		"@nestjs/platform-express": "^7.6.13",
		"@nestjs/swagger": "^4.7.16",
		"@nestjs/typeorm": "^7.1.5",
		"@nestjsx/crud": "^5.0.0-alpha.3",
		"@nestjsx/crud-typeorm": "^5.0.0-alpha.3",
		"@types/nunjucks": "^3.1.4",
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"crypto-random-string": "^3.3.1",
		"debug": "^4.3.1",
		"express": "^4.17.1",
		"nestjs-command": "^2.0.0",
		"nestjs-minio": "^2.1.7",
		"nodemailer": "^6.5.0",
		"nunjucks": "^3.2.3",
		"nunjucks-date": "^1.5.0",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"pg": "^8.5.1",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^6.6.6",
		"swagger-ui-express": "^4.1.6",
		"typeorm": "^0.2.31",
		"typeorm-fixtures-cli": "^1.9.1"
	},
	"devDependencies": {
		"@nestjs/cli": "^7.5.6",
		"@nestjs/schematics": "^7.2.7",
		"@nestjs/testing": "^7.6.13",
		"@types/debug": "^4.1.5",
		"@types/express": "^4.17.11",
		"@types/jest": "^26.0.20",
		"@types/minio": "^7.0.7",
		"@types/node": "^14.14.31",
		"@types/nodemailer": "^6.4.1",
		"@types/passport-jwt": "^3.0.5",
		"@types/passport-local": "^1.0.33",
		"@types/supertest": "^2.0.10",
		"@typescript-eslint/eslint-plugin": "^4.15.2",
		"@typescript-eslint/parser": "^4.15.2",
		"eslint": "^7.20.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"faker": "^5.4.0",
		"jest": "^26.6.3",
		"prettier": "^2.2.1",
		"supertest": "^6.1.3",
		"ts-jest": "^26.5.2",
		"ts-loader": "^8.0.17",
		"ts-node": "^9.1.1",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.1.5"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
